EOI EQU 20H
IMR EQU 21H
INT2 EQU 26H
DATO EQU 40H
ESTADO EQU 41H

ORG 1000H
ID DB 10
STR DB "UNIVERSIDAD NACIONAL DE LA PLATA"
FIN DB ?

ORG 3000H
IMPRIMIR: PUSH AX
          MOV AL, [BX]
          OUT DATO, AL
          INC BX
          
          MOV AL, 20H
          OUT EOI, AL
          POP AX
          IRET


ORG 2000H
CLI
MOV AL, 11111011b
OUT IMR, AL

MOV AX, IMPRIMIR
MOV BX, 40
MOV [BX], AX

MOV AL, 10
OUT INT2, AL
STI

MOV BX, OFFSET STR
MOV CL, OFFSET FIN - OFFSET STR

IN AL, ESTADO
OR AL, 10000000b
OUT ESTADO, AL

POLL: CMP BX, OFFSET FIN
JNZ POLL

IN AL, ESTADO
AND AL, 01111111b
OUT ESTADO, AL
INT 0
END
